{
    "compilerOptions": {
      "outDir": "./client/dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "jsxFactory": "m",
      "allowJs": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "typeRoots" : [
        "./client/types/", 
        "./node_modules/@types/"
      ]
    },
    "include": [
        "client/**/*"
    ],
    "exclude": [
        "node_modules",
        "vendor",
        "**/**.test.ts"
    ]
  }
  