{
    "name": "resum",
    "description": "my curriculum vitae ? a json file and an html static site renderer",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "start": "webpack --mode development",
        "build:client": "webpack --mode production",
        "composer:install": "docker run --rm -v $(pwd):/app composer/composer:latest install",
        "apache:start": "docker run --rm -p 8000:80 -v $(pwd):/var/www/html php:apache",
        "build:server": "npm run copy:index && npm run copy:vendor && npm run copy:public",
        "copy:index": "cp index.php dist/",
        "copy:vendor": "cp -r vendor dist/",
        "copy:public": "cp -r client/dist/ dist/",
        "copy": "npm run copy:index && npm run copy:vendor && npm run copy:public",
        "stats": "webpack --progress -c --profile --json > stats.json"
    },
    "dependencies": {
        "inferno": "^7.1.9",
        "moment": "^2.24.0"
    },
    "devDependencies": {
        "@babel/core": "^7.2.0",
        "@babel/plugin-proposal-class-properties": "7.2.0",
        "@babel/preset-env": "7.2.0",
        "@babel/preset-typescript": "^7.1.0",
        "@types/jest": "^23.3.9",
        "@types/mithril": "^1.1.13",
        "@types/node": "^10.12.3",
        "@types/webpack": "^4.4.18",
        "babel-loader": "^8.0.4",
        "babel-plugin-inferno": "^6",
        "clean-webpack-plugin": "^1.0.0",
        "css-loader": "^1.0.1",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^23.6.0",
        "node-sass": "^4.10.0",
        "pug-loader": "^2.4.0",
        "sass-loader": "^7.1.0",
        "source-map-loader": "^0.2.4",
        "style-loader": "^0.23.1",
        "ts-jest": "^23.10.4",
        "ts-loader": "^5.3.0",
        "ts-node": "^7.0.1",
        "tsconfig-paths": "^3.6.0",
        "tslint": "^5.11.0",
        "typescript": "^3.2.1",
        "webpack": "^4.26.1",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.10"
    }
}